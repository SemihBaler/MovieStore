@{
    ViewData["Title"] = "AddCategory";
}
@model AddCategoryDTO

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="AddCategory">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kategori Ekle</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label" asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Lütfen kategori adı giriniz...." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-outline-success float-end">Ekle</button>
                        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-outline-info float-start">Geri Dön</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

